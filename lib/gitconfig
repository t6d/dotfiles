[include]
  path = ~/.gitconfig.local
[push]
  default = upstream
[alias]
  ci = commit -v
  cia = commit -v -a
  co = checkout
  df = diff --color
  dt = difftool
  rb = rebase
  st = status
  rl = reflog
  br = branch
  aliases = config --get-regexp alias.*
  tree = log --graph --decorate --pretty=oneline --abbrev-commit
  ap = add -p
  current-branch = rev-parse --symbolic-full-name --abbrev-ref HEAD
  cleanup-merged-branches = "!git branch --merged master | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
[color]
  ui = true
[color "status"]
  added = green
  changed = yellow
  untracked = magenta
[merge]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
  tool = Kaleidoscope
  algorithm = patience
[difftool]
  prompt = false
[mergetool "Kaleidoscope"]
  trustexitcode = true
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
[mergetool]
  prompt = false
[mergetool "splice"]
  cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
  trustExitCode = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[core]
  excludesfile = ~/.gitignore.global
  commitGraph = true
[protocol]
  version = 2
[gc]
  writeCommitGraph = true
[user]
  name = Konstantin Tennhard
  email = konstantin.tennhard@shopify.com
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
[init]
	defaultBranch = main
